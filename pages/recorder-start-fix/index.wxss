.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  background: #ededed;
}

.status-text {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 32px;
}

.record-btn {
  padding: 16px 48px;
  border-radius: 999px;
  background: #07c160;
  color: white;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s;
}

.record-btn.recording {
  background: #576b95;
}

.error-banner {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 24px 16px;
  background: rgba(230, 67, 64, 0.9);
  color: white;
  font-size: 14px;
  text-align: center;
  z-index: 200;
  box-sizing: border-box;
}

.float-btn {
  position: fixed;
  right: 24px;
  bottom: 80px;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: #07c160;
  color: white;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}
