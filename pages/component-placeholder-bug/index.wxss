.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  background: #ededed;
}

.loading-area {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  color: rgba(0, 0, 0, 0.5);
}

.render-time-display {
  position: fixed;
  top: 120px;
  left: 50%;
  transform: translateX(-50%);
  padding: 12px 32px;
  background: rgba(0, 0, 0, 0.7);
  color: #07c160;
  font-size: 18px;
  border-radius: 10px;
  z-index: 100;
  white-space: nowrap;
}

.float-btn {
  position: fixed;
  right: 24px;
  bottom: 80px;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: #07c160;
  color: white;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}
